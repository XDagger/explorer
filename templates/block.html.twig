{% extends 'frontend.html.twig' %}

{% block content %}
<main role="main" class="container">
  <h1>Info</h1>
  <table class="table">
    <tbody>
      <tr>
        <th scope="row">Time</th>
        <td>{{block["time"]}}</td>
      </tr>
	  <tr>
        <th scope="row">Timestamp</th>
        <td>{{block["timestamp"]}}</td>
      </tr>
	  <tr>
        <th scope="row">Flags</th>
        <td>{{block["flags"]}}</td>
      </tr>
	  <tr>
        <th scope="row">File pos</th>
        <td>{{block["file pos"]}}</td>
      </tr>
	  <tr>
        <th scope="row">Hash</th>
        <td>{{block["hash"]}}</td>
      </tr>
	  <tr>
        <th scope="row">Difficulty</th>
        <td>{{block["difficulty"]}}</td>
      </tr>
	  <tr>
        <th scope="row">Balance</th>
        <td>{{block["balance"]}}</td>
      </tr>
	  <tr>
		<th scope="row">Type</th>
		<td>{{block["type"]}}</td>
	  </tr>
    </tbody>
  </table>

  <h1>Details</h1>
  <div class="count">
    Total: {{ pagination.getTotalItemCount }}
  </div>
  {% if block["type"] == 'address' %}
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Direction</th>
          <th scope="col">Transaction</th>
          <th scope="col">{{ knp_pagination_sortable(pagination, 'Amount', '[amount]') }}</th>
          <th scope="col">{{ knp_pagination_sortable(pagination, 'Time', '[time]') }}</th>
        </tr>
      </thead>
      <tbody>
	  	{% for element in pagination %}
        <tr>
          <td><span class="{{ element["direction"]|lower }}">{{ element["direction"] }}</span></td>
          <td><a href="{{ path('block', {'address':element["address"]}) }}">{{ element["address"] }}</a></td>
          <td>{{ element["amount"] }}</td>
          <td>{{ element["time"] }}</td>
        </tr>
		{% endfor %}
      </tbody>
    </table>
  {% else %}
	  <table class="table">
		<thead>
		  <tr>
			<th scope="col">Direction</th>
			<th scope="col">Address</th>
          <th scope="col">{{ knp_pagination_sortable(pagination, 'Amount', '[amount]') }}</th>
		  </tr>
		</thead>
		<tbody>
		  {% for element in pagination %}
		  <tr>
			<td><span class="{{ element["direction"]|lower }}">{{ element["direction"] }}</span></td>
			<td><a href="{{ path('block', {'address':element["address"]}) }}">{{ element["address"] }}</a></td>
			<td>{{ element["amount"] }}</td>
		  </tr>
		  {% endfor %}
		</tbody>
	  </table>
  {% endif %}
  <div class="navigation">
    {{ knp_pagination_render(pagination) }}
  </div>
</main>

{% endblock %}
